<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="FodyPackaging.props" />

  <PropertyGroup>
    <TargetFrameworks>net40-client;net45</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Common.snk</AssemblyOriginatorKeyFile>
    <SkipPackagingDefaultFiles>true</SkipPackagingDefaultFiles>
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fody" Version="6.1.1" PrivateAssets="None" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.0-beta-20204-02" PrivateAssets="All" />
  </ItemGroup>

  <Import Project="FodyPackaging.targets" />

  <PropertyGroup>
    <!-- define CODE_ANALYSIS to persist the "SupressMessage" attributes! -->
    <DefineConstants>$(DefineConstants);CODE_ANALYSIS</DefineConstants>
  </PropertyGroup>

</Project>
